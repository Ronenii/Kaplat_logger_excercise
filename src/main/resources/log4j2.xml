<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="5">

    <Appenders>
        <File name="requestsAppender" fileName="logs/requests.log" append="false">
            <PatternLayout pattern=""/>
        </File>

        <File name="todoAppender" fileName="logs/todos.log" append="false">
            <PatternLayout pattern=""/>
        </File>

        <Console name="consoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %msg%n | request#%X{number}"/>
        </Console>

    </Appenders>

    <Loggers>
        <Logger name="request-logger" level="DEBUG">
            <AppenderRef ref= "requestsAppender"/>
            <AppenderRef ref= "consoleAppender"/>
        </Logger>
        <Logger name="todo-logger" level="INFO">
            <AppenderRef ref= "todoAppender"/>
        </Logger>

    </Loggers>

    <Root level="INFO">
        <AppederRef ref ="Console"/>
    </Root>
</Configuration>